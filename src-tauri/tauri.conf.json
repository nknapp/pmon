{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "pmon",
  "version": "0.1.0",
  "identifier": "com.pmon.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "pmon",
        "width": 800,
        "height": 600
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": [
      "deb",
      "rpm"
    ],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "cli": {
      "description": "GitHub Workflow Monitor",
      "args": [
        {
          "name": "edit-config",
          "description": "Open $EDITOR with the config file",
          "short": "e"
        },
        {
          "name": "config-file",
          "description": "Use an alternative config file",
          "short": "c",
          "takesValue": true
        }
      ]
    }
  }
}
